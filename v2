def main():
    """Main entry point for the MTG Enhancer"""
    print("üÉè MTG Proxy Enhancer - Optimized Modular Version")
    print("=" * 60)
    
    try:
        # Create enhancer instance
        enhancer = create_mtg_enhancer_optimized()
        
        if not enhancer.images:
            print("üìÇ No images found in input folder")
            print("üí° Add MTG card images to 'mtgproxy/Input' folder")
            print("\nüìö Available presets:")
            presets = PresetManager.create_preset_settings()
            for name in presets.keys():
                print(f"   ‚Ä¢ {name}")
            return
        
        print(f"‚úÖ Found {len(enhancer.images)} images")
        print(f"üìÅ Input: {enhancer.input_folder}")
        print(f"üìÅ Output: {enhancer.output_folder}")
        
        print("\nüéØ Starting Selective Enhancement Interface...")
        
        # Create and display the interface
        interface = create_enhanced_selective_interface(enhancer)
        display(interface)
        
        print("\n‚ú® Interface loaded successfully!")
        print("\nüí° Quick Tips:")
        print("   1. Choose a card type preset (normal, art, full art, etc.)")
        print("   2. Watch the live comparison as you adjust sliders")
        print("   3. Click 'Apply Enhancement' when satisfied")
        print("   4. Save your results!")
        
    except Exception as e:
        print(f"‚ùå Error starting enhancer: {e}")
        print("\nüìö For help, run: print_interface_help()")

def quick_start():
    """Quick start with minimal setup"""
    enhancer = create_mtg_enhancer_optimized()
    
    if enhancer.images:
        interface = create_enhanced_selective_interface(enhancer)
        display(interface)
        return interface
    else:
        print("üìÇ Add images to 'mtgproxy/Input' folder first")
        return None

def create_interface_only():
    """Create interface without auto-display (for custom usage)"""
    enhancer = create_mtg_enhancer_optimized()
    return create_enhanced_selective_interface(enhancer)

